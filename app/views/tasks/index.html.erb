<div class="center-container">
  <h3>Tasks for today:</h3>
  <% if @incomplete_tasks_today.present? %>


      <% @incomplete_tasks_today.each do |task| %>

      <% if task.done == false %>
        <div class="task-card" style="margin-bottom: 20px;">
          <% if task.task_type == 'watering' %>
            <i class="fa-solid fa-droplet" style="margin: 0 15px;"></i>
          <% elsif task.task_type == 'fertilizing' %>
            <i class="fa-solid fa-seedling" style="margin: 0 15px;"></i>
          <% end %>
          <%= task.plant.nickname %>
          <%= link_to 'Mark as done', mark_done_task_path(task), class: "btn-small my-1", data: {turbo_method: :patch} %>
        </div>
       <%end%>
      <% end %>

  <% else %>
    <p>No tasks for today.</p>
  <% end %>

