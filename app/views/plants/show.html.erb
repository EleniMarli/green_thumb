<div class="details-card">

  <%= image_tag @plant.image_url %>

  <div class="details-infos">

    <div class='text'>
      <% if @plant.nickname!=nil %>
        <div class='name'>
          <h1><b><%= @plant.nickname %></b> <%= @happiness %> </h1>
          <p class="text_gray">(<%= @plant.scientific_name %>)</p>

        </div>
      <% else %>
        <div class='name'>
          <h1><%= @plant.scientific_name %></h1>
        </div>
      <% end %>
      <div class="suggested">
        <h3>About:</h3>
        <p class="text_gray">+ care level: <%= @plant.care_level %></p>
        <p class="text_gray"><i class="fa-regular fa-sun"></i> <%= @suggested_sunlight %> </p>
        <p class="text_gray"><i class="fa-solid fa-droplet"></i> water every <%=@plant.suggested_watering_frequency_in_days%> days </p>
        <p class="text_gray"><i class="fa-solid fa-arrow-trend-up"></i> fertilize every <%=@plant.suggested_fertilizing_frequency_in_days%> days </p>
      </div>
      <div class="currently">
        <div class='sun'>
          <h3>Currently:</h3>
          <span>

            <%= link_to [@plant, { plant: { actual_sun_exposure: 2 }}], method: :patch, data: { turbo: true } do %>
              <i class="fa-regular fa-sun"></i>
            <% end %>
            <%= link_to [@plant, { plant: { actual_sun_exposure: 1 }}], method: :patch, data: { turbo: true } do %>
              <i class="fa-solid fa-cloud-sun"></i>
            <% end %>
            <%= link_to [@plant, { plant: { actual_sun_exposure: 0 } }], method: :patch, data: { turbo: true } do %>
              <i class="fa-solid fa-cloud"></i>
            <% end %>
          </span>
        </div>
        <p class="text_gray"> last watered: <%= @last_watered %> </p>
        <p class="text_gray"> last fertilized: <%= @last_fertilized %></p>
        <% if @plant.room!=nil %>
          <p class="text_gray"> in: <%= @plant.room %> </p>
        <% end %>

      </div>

      <%=link_to '✏️', edit_plant_path(@plant), class:"edit-btn"%>
      <div class="buttons-bottom">

      <%=link_to '🗑️', plant_path(@plant), data: {turbo_method: :delete, turbo_confirm: "Are you sure? This action can't be reversed!"}, class:"delete-btn" %></i>
      </div>
    </div>
  </div>

</div>

<div class="navbar navbar-light">
  <div class="container-navbar">
    <%=link_to root_path do%>
      <%=image_tag 'home.svg', class:"icon-navbar"%>
    <%end%>
    <%=link_to tasks_path do%>
      <%=image_tag 'bell.svg', class:"icon-navbar"%>
    <%end%>
    <%=link_to helper_path do%>
      <%=image_tag 'helper.svg', class:"icon-navbar"%>
    <%end%>
  </div>
</div>
