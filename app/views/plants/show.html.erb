<div class="details-card">

  <%= image_tag @plant.image_url %>

  <div class="details-infos">

    <div class='text'>
      <% if @plant.nickname!=nil %>
        <div class='name'>
          <h1><b><%= @plant.nickname %></b></h1>
          <p class="text_gray">(<%= @plant.scientific_name %>)</p>
        </div>
      <% else %>
        <div class='name'>
          <h1><%= @plant.scientific_name %></h1>
        </div>
      <% end %>
      <div class="suggested">
        <h3>Suggested:</h3>
        <p class="text_gray"><i class="fa-regular fa-sun"></i> <%= @suggested_sunlight %> </p>
        <p class="text_gray"><i class="fa-solid fa-droplet"></i> every <%=@plant.suggested_watering_frequency_in_days%> days </p>
        <p class="text_gray"><i class="fa-solid fa-arrow-trend-up"></i> every <%=@plant.suggested_fertilizing_frequency_in_days%> days </p>
      </div>
      <div class="currently">
        <div class='sun'>
          <h3>Currently:</h3>
          <span><i class="fa-regular fa-sun"></i> <i class="fa-solid fa-cloud-sun"></i> <i class="fa-solid fa-cloud"></i></span>
        </div>
        <p class="text_gray"> last watered: <%= @last_watered %> </p>
        <p class="text_gray"> last fertilized: <%= @last_fertilized %></p>
        <% if @plant.room!=nil %>
          <p class="text_gray"> in: <%= @plant.room %> </p>
        <% end %>

      </div>

      <%=link_to '✏️', edit_plant_path(@plant), class:"edit-btn"%>
      <div class="buttons-bottom">

      <%=link_to '🗑️', plant_path(@plant), data: {turbo_method: :delete, turbo_confirm: "Are you sure? This action can't be reversed!"}, class:"delete-btn" %></i>
      </div>
    </div>
  </div>

</div>
