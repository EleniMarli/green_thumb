<div class="banner">
  <div class="container">
    <h1 class="center">Green Thumb 🍃</h1>
  </div>
</div>

<div class="edit_container container">
<h1><B>EDIT YOUR PLANT</B></h1>
<div class="edit_form">

<%= simple_form_for @plant do |f| %>
  <%= f.input :nickname%>
  <%= f.input :description%>
  <%= f.input :actual_sun_exposure%>
  <%= f.button :button, class: "btn-test", value: "" do %>
    Confirm <i class="fa-solid fa-check"></i>
  <% end %>
<% end %>
</div>
</div>
