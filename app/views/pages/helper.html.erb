<div class="page-container">
  <div class="navbar-container">

    <div class="banner">
      <div class="container">
        <h6>My helper</h6>
      </div>
    </div>


  </div>
  <div class="content-container">

  <h1>AI Helper</h1>

  <%= form_with(url: helper_path, method: :get) do |form| %>
    <div class="form-group">
      <%= form.label :user_question, "Ask a question:" %>
      <%= form.text_field :user_question, class: "form-control", placeholder: "Type your question here..." %>
    </div>

    <%= form.submit "Ask", class: "btn btn-primary" %>
  <% end %>

  <div class="response-container">
    <% if @content.present? %>
      <h3>AI's Response:</h3>
      <p><%= markdown(@content) %></p>
    <% end %>
  </div>
</div>



  <div class="footer-container">
    <%= render "shared/navbar" %>
  </div>
</div>
