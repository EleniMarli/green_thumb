<div class="page-container">
  <div class="navbar-container">
    <div class="banner">
      <div class="container">
        <h6>My helper</h6>
      </div>
    </div>
  </div>

  <div class="content-container">
    <div class="response-container">
      <% if @content.present? %>
        <h3>AI's Response:</h3>
        <p><%= markdown(@content) %></p>
      <% end %>
    </div>

    <%= form_with(url: helper_path, method: :get) do |form| %>
      <div class="form-group">
        <%= form.text_field :user_question, class: "form-control", placeholder: "Ask me anything about your plants..." %>
      </div>
      <%= form.submit "Ask", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="footer-container">
    <%= render "shared/navbar" %>
  </div>
</div>
