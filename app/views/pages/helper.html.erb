<div class="page-container">
  <div class="navbar-container">
    <div class="banner">
      <div class="container">
        <h6>My helper</h6>
      </div>
    </div>
  </div>

<div class="content-container">
  <div class="background-search-page">
    <div class="flex-helper-container">
      <div class="answer-helper">
        <% if @content.present? %>
          <p><%= markdown(@content) %></p>
        <% else %>
          <div class="plant">
            <%= image_tag 'plant.svg' %>
          </div>
        <% end %>
      </div>

      <div class="ask-helper">
        <%= form_with(url: helper_path, method: :get) do |form| %>
          <div class="flex-container">
            <%= form.text_area :user_question, class: "form-control ask-field", placeholder: "Ask me anything about your plants ...", rows: 3 %>
          <%= form.button nil, class: "ask-submit-btn" do %>
            <i class="fa-solid fa-arrow-up"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>

  <div class="footer-container">
    <%= render "shared/navbar" %>
  </div>
</div>
